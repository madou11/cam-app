    android:padding="5dp" >

    <ImageView
        android:id="@+id/menu_item_image1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical|center_horizontal|center" />
    
    <ImageView
        android:id="@+id/menu_item_image2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical|center_horizontal|center" />
    
    <ImageView
        android:id="@+id/menu_item_image3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical|center_horizontal|center" />
    
    <ImageView
        android:id="@+id/menu_item_image4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical|center_horizontal|center" />

</LinearLayout>